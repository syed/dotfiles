		editor = vim


[merge]
        tool = vimdiff

[color]
	diff = auto
	status = auto
	branch = auto
        interactive = auto
        ui = true
        pager = true

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold

[color "status"]
        added = yellow
        changed = green
        untracked = cyan

[core]
        #pager = less -FRSX
        whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[alias]
	co = checkout
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' \
		--abbrev-commit --date=relative

#[pager]
#	diff = less
#[diff]
#        external = git_diff_wrapper


[giggle]
	main-window-maximized = true
	main-window-geometry = 0x0+0+0
	file-view-vpane-position = 519
	main-window-view = HistoryView
	history-view-vpane-position = 285
[credential]
	helper = cache --timeout=36000
[push]
	default = simple
